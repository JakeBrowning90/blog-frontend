<header>
    <nav>
        
        <a href="/">
            <h1>Blog Home</h1>
        </a>
         <!-- If logged in, display username and logout -->
        <div class="navLinkDiv">
            <% if (localStorage.getItem('full_name')) { %>
                <p><%= localStorage.getItem('full_name') %></p>
                <a href="/users/log-out">Log Out</a>
            <% } else { %>
                <a href="/users/log-in">Log In</a>
                <a href="/users/sign-up">Sign Up</a>
            <% } %>
        </div>
    </nav>

</header> 