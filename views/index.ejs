<!DOCTYPE html>
<html>
  <%- include("./partials/head"); %>
  <body>
    <%- include("./partials/header"); %>
    <main>

      <h1><%= title %></h1>
      <p>Welcome to <%= title %></p>
      <ul>
        <% postList.forEach((post) => { %>
          <li class="testPost">
            <h2><%= post.title %></h2>
            <p><%= post.author.full_name %></p>
            <p><%= post.timestamp %></p>
            <p><%= post.body %></p>
            <!-- TODO - Link to read post and comments -->
            <a href="">Read more</a>
          </li>
        <% }) %> 
      </ul>

    </main>
    <%- include("./partials/footer"); %>
  </body>
</html>
