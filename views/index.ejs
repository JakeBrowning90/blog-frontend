<!DOCTYPE html>
<html>
  <%- include("./partials/head"); %>
  <body>
    <%- include("./partials/header"); %>
    <main>
      <% if (postList.length == 0) { %>
        <p>There are no published posts at this time.</p>
      <% } else { %>
        <p>Newest:</p>
        <ul>
          <% postList.forEach((post) => { %>
            <li class="postPreview">
              <a href=<%= post.url %>>
                <h2><%= post.title %></h2>
              </a>
              <h3><%= post.subtitle %></h3>
              <p>
                By <%= post.user.full_name %>, 
                Published <%= new Date(post.timestamp).toUTCString() %>
              </p>
            </li>
          <% }) %> 
        </ul>
        <p>End of post history</p>
      <% } %>
    </main>
    <%- include("./partials/footer"); %>
  </body>
</html>
